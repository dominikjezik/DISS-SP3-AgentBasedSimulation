<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vmp="clr-namespace:DiscreteSimulation.GUI.ViewModels.Panels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="DiscreteSimulation.GUI.Views.Panels.SingleReplicationPanel"
             x:DataType="vmp:SingleReplicationPanelViewModel">
    
    <Grid 
        RowDefinitions="7*,3*" ColumnDefinitions="500,*,400"
        IsVisible="{Binding Shared.IsSingleReplication}">
        
        <ContentControl 
            Grid.Row="0" Grid.RowSpan="2" 
            Grid.Column="0" Grid.ColumnSpan="3" 
            Margin="0,10,0,0"
            x:Name="MyContentControl" IsVisible="{Binding Shared.IsAnimatorOn}" />
        
        <TabControl Grid.Row="0" Grid.Column="0" Margin="0,0,0,0" IsVisible="{Binding Shared.IsAnimatorOff}">
            <TabItem Header="Orders" FontSize="16" FontWeight="Bold">
                <Grid
                    RowDefinitions="*,170"
                    ColumnDefinitions="*"
                    Margin="0,5,0,0">
        
                    <DataGrid Grid.Row="0" Grid.Column="0"
                              Grid.RowSpan="{Binding OrdersDataGridsRowSpan}"
                              Margin="0,0,5,0"
                              ItemsSource="{Binding Orders}"
                              SelectionMode="Single"
                              SelectedItem="{Binding SelectedOrder}"
                              CanUserSortColumns="False"
                              IsReadOnly="True"
                              GridLinesVisibility="All"
                              RowHeight="24"
                              BorderThickness="1" BorderBrush="Gray">
        
                        <DataGrid.Styles>
                            <Style Selector="DataGridColumnHeader">
                                <Setter Property="FontWeight" Value="Bold"/>
                            </Style>
                            <Style Selector="DataGridCell:current /template/ Grid#FocusVisual">
                                <Setter Property="IsVisible" Value="false" />
                            </Style>
                        </DataGrid.Styles>
        
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="#" Width="Auto" Binding="{Binding Id}" />
                            <DataGridTextColumn Header="Items" Width="Auto" Binding="{Binding CountOfFurnitureItems}" />
                            <DataGridTextColumn Header="State" Width="*" Binding="{Binding State}" />
                            <DataGridTextColumn Header="Arrival" Width="Auto" Binding="{Binding ArrivalTime}" />
                        </DataGrid.Columns>
                    </DataGrid>
        
                    <DataGrid Grid.Row="1" Grid.Column="0"
                              Margin="0,10,5,0"
                              IsVisible="{Binding IsSelectedOrder}"
                              ItemsSource="{Binding SelectedOrderFurnitureItems}"
                              SelectionMode="Single"
                              CanUserSortColumns="False"
                              IsReadOnly="True"
                              GridLinesVisibility="All"
                              RowHeight="24"
                              BorderThickness="1" BorderBrush="Gray">
        
                        <DataGrid.Styles>
                            <Style Selector="DataGridColumnHeader">
                                <Setter Property="FontWeight" Value="Bold"/>
                            </Style>
                            <Style Selector="DataGridCell:current /template/ Grid#FocusVisual">
                                <Setter Property="IsVisible" Value="false" />
                            </Style>
                        </DataGrid.Styles>
        
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="#" Width="Auto" Binding="{Binding Id}" />
                            <DataGridTextColumn Header="Type" Width="Auto" Binding="{Binding Type}" />
                            <DataGridTextColumn Header="State" Width="*" Binding="{Binding State}" />
                            <DataGridTextColumn Header="Worker" Width="Auto" Binding="{Binding Worker}" />
                        </DataGrid.Columns>
                    </DataGrid>
        
                </Grid>
            </TabItem>
            <TabItem Header="Assembly lines" FontSize="16" FontWeight="Bold">
                <Grid
                    RowDefinitions="*"
                    ColumnDefinitions="*"
                    Margin="0,5,0,0">
        
                    <DataGrid Grid.Row="0" Grid.Column="0"
                              Margin="0,0,5,0"
                              ItemsSource="{Binding AssemblyLines}"
                              SelectionMode="Single"
                              CanUserSortColumns="False"
                              IsReadOnly="True"
                              GridLinesVisibility="All"
                              RowHeight="24"
                              BorderThickness="1" BorderBrush="Gray">
        
                        <DataGrid.Styles>
                            <Style Selector="DataGridColumnHeader">
                                <Setter Property="FontWeight" Value="Bold"/>
                            </Style>
                            <Style Selector="DataGridCell:current /template/ Grid#FocusVisual">
                                <Setter Property="IsVisible" Value="false" />
                            </Style>
                        </DataGrid.Styles>
        
                        <DataGrid.Columns>
                            <DataGridTemplateColumn Header="ID" Width="Auto">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0,0,0">
                                            <TextBlock
                                                Text="●"
                                                Margin="0,0,3,0"
                                                Foreground="{Binding StatusColor}" />
                                            <TextBlock Text="{Binding Id}" />
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="Order" Width="Auto"  Binding="{Binding CurrentOrder}" />
                            <DataGridTextColumn Header="State" Width="*" Binding="{Binding State}" />
                            <DataGridTextColumn Header="Worker" Width="*" Binding="{Binding CurrentWorker}" />
                            <DataGridTextColumn Header="Util" Width="Auto" Binding="{Binding Utilization}" />
                        </DataGrid.Columns>
                    </DataGrid>
        
                </Grid>
            </TabItem>
        </TabControl>

        <TabControl Grid.Row="0" Grid.RowSpan="2" Grid.Column="2" Margin="0,0,0,0" IsVisible="{Binding Shared.IsAnimatorOff}">
            <TabItem Header="Statistics" FontSize="16" FontWeight="Bold">
                <Grid
                    RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto" 
                    ColumnDefinitions="Auto,*,Auto"
                    Margin="-4,5,0,0">
                
                    <SelectableTextBlock
                        Grid.Row="0" Grid.Column="0"
                        Margin="5,0,0,3"
                        FontSize="14"
                        FontFamily="Source Code Pro"
                        Text="Order processing time" />
                    
                    <SelectableTextBlock
                        Grid.Row="0" Grid.Column="1"
                        Margin="0,0,0,3"
                        FontSize="14"
                        FontFamily="Source Code Pro"
                        HorizontalAlignment="Center"
                        Text="{Binding ReplicationOrderProcessingTime}" />
                    
                    <SelectableTextBlock
                        Grid.Row="0" Grid.Column="2"
                        Margin="0,0,10,3"
                        FontSize="14"
                        FontFamily="Source Code Pro"
                        Text="{Binding Shared.SelectedTimeUnits}" >
                        
                        <SelectableTextBlock.ContextMenu>
                            <ContextMenu >
                                <MenuItem Header="seconds" Click="TimeUnitsMenuItem_OnClick" />
                                <MenuItem Header="minutes" Click="TimeUnitsMenuItem_OnClick" />
                                <MenuItem Header="hours" Click="TimeUnitsMenuItem_OnClick" />
                            </ContextMenu>
                        </SelectableTextBlock.ContextMenu>
                        
                    </SelectableTextBlock>
                    
                    <SelectableTextBlock
                        Grid.Row="1" Grid.Column="0"
                        Margin="5,0,0,10"
                        FontSize="14"
                        FontFamily="Source Code Pro"
                        Text="Order item processing time" />
                    
                    <SelectableTextBlock
                        Grid.Row="1" Grid.Column="1"
                        Margin="0,0,0,10"
                        FontSize="14"
                        FontFamily="Source Code Pro"
                        HorizontalAlignment="Center"
                        Text="{Binding ReplicationOrderItemProcessingTime}" />
                    
                    <SelectableTextBlock
                        Grid.Row="1" Grid.Column="2"
                        Margin="0,0,10,10"
                        FontSize="14"
                        FontFamily="Source Code Pro"
                        Text="{Binding Shared.SelectedTimeUnits}" >
                        
                        <SelectableTextBlock.ContextMenu>
                            <ContextMenu >
                                <MenuItem Header="seconds" Click="TimeUnitsMenuItem_OnClick" />
                                <MenuItem Header="minutes" Click="TimeUnitsMenuItem_OnClick" />
                                <MenuItem Header="hours" Click="TimeUnitsMenuItem_OnClick" />
                            </ContextMenu>
                        </SelectableTextBlock.ContextMenu>
                        
                    </SelectableTextBlock>
                    
                    <SelectableTextBlock
                        Grid.Row="2" Grid.Column="0"
                        Margin="5,0,0,3"
                        FontSize="14"
                        FontFamily="Source Code Pro"
                        Text="Pending orders" />
                    
                    <SelectableTextBlock
                        Grid.Row="2" Grid.Column="1"
                        Margin="0,0,0,3"
                        FontSize="14"
                        FontFamily="Source Code Pro"
                        HorizontalAlignment="Center"
                        Text="{Binding ReplicationPendingOrders}" />
                    
                    <SelectableTextBlock
                        Grid.Row="2" Grid.Column="2"
                        Margin="0,0,10,3"
                        FontSize="14"
                        FontFamily="Source Code Pro"
                        Text="orders" />
                    
                    <SelectableTextBlock
                        Grid.Row="3" Grid.Column="0"
                        Margin="5,0,0,3"
                        FontSize="14"
                        FontFamily="Source Code Pro"
                        Text="Pending items for line" />
                    
                    <SelectableTextBlock
                        Grid.Row="3" Grid.Column="1"
                        Margin="0,0,0,3"
                        FontSize="14"
                        FontFamily="Source Code Pro"
                        HorizontalAlignment="Center"
                        Text="{Binding ReplicationPendingItemsForLine}" />
                    
                    <SelectableTextBlock
                        Grid.Row="3" Grid.Column="2"
                        Margin="0,0,10,3"
                        FontSize="14"
                        FontFamily="Source Code Pro"
                        Text="items" />
                    
                    <SelectableTextBlock
                        Grid.Row="4" Grid.Column="0"
                        Margin="5,0,0,3"
                        FontSize="14"
                        FontFamily="Source Code Pro"
                        Text="Pending items for worker A" />
            
                    <SelectableTextBlock
                        Grid.Row="4" Grid.Column="1"
                        Margin="0,0,0,3"
                        FontSize="14"
                        FontFamily="Source Code Pro"
                        HorizontalAlignment="Center"
                        Text="{Binding ReplicationPendingItemsForWorkerA}" />
                    
                    <SelectableTextBlock
                        Grid.Row="4" Grid.Column="2"
                        Margin="0,0,10,3"
                        FontSize="14"
                        FontFamily="Source Code Pro"
                        Text="items" />
                    
                    <SelectableTextBlock
                        Grid.Row="5" Grid.Column="0"
                        Margin="5,0,0,3"
                        FontSize="14"
                        FontFamily="Source Code Pro"
                        Text="Pending items for worker C" />
            
                    <SelectableTextBlock
                        Grid.Row="5" Grid.Column="1"
                        Margin="0,0,0,3"
                        FontSize="14"
                        FontFamily="Source Code Pro"
                        HorizontalAlignment="Center"
                        Text="{Binding ReplicationPendingItemsForWorkerC}" />
                    
                    <SelectableTextBlock
                        Grid.Row="5" Grid.Column="2"
                        Margin="0,0,10,3"
                        FontSize="14"
                        FontFamily="Source Code Pro"
                        Text="items" />
                        
                    <SelectableTextBlock
                        Grid.Row="6" Grid.Column="0"
                        Margin="5,0,0,3"
                        FontSize="14"
                        FontFamily="Source Code Pro"
                        Text="Pending items for worker B" />
            
                    <SelectableTextBlock
                        Grid.Row="6" Grid.Column="1"
                        Margin="0,0,0,3"
                        FontSize="14"
                        FontFamily="Source Code Pro"
                        HorizontalAlignment="Center"
                        Text="{Binding ReplicationPendingItemsForWorkerB}" />
                    
                    <SelectableTextBlock
                        Grid.Row="6" Grid.Column="2"
                        Margin="0,0,10,3"
                        FontSize="14"
                        FontFamily="Source Code Pro"
                        Text="items" />
                        
                    <SelectableTextBlock
                        Grid.Row="7" Grid.Column="0"
                        Margin="5,0,0,10"
                        FontSize="14"
                        FontFamily="Source Code Pro"
                        Text="Pending closets for worker A/C" />
            
                    <SelectableTextBlock
                        Grid.Row="7" Grid.Column="1"
                        Margin="0,0,0,10"
                        FontSize="14"
                        FontFamily="Source Code Pro"
                        HorizontalAlignment="Center"
                        Text="{Binding ReplicationPendingItemsForWorkerMix}" />
                    
                    <SelectableTextBlock
                        Grid.Row="7" Grid.Column="2"
                        Margin="0,0,10,10"
                        FontSize="14"
                        FontFamily="Source Code Pro"
                        Text="items" />

                    <SelectableTextBlock
                        Grid.Row="8" Grid.Column="0"
                        Margin="5,0,0,3"
                        FontSize="14"
                        FontFamily="Source Code Pro"
                        Text="Waiting time pending orders" />
            
                    <SelectableTextBlock
                        Grid.Row="8" Grid.Column="1"
                        Margin="0,0,0,3"
                        FontSize="14"
                        FontFamily="Source Code Pro"
                        HorizontalAlignment="Center"
                        Text="{Binding ReplicationPendingOrdersWaitingTime}" />
                    
                    <SelectableTextBlock
                        Grid.Row="8" Grid.Column="2"
                        Margin="0,0,10,3"
                        FontSize="14"
                        FontFamily="Source Code Pro"
                        Text="{Binding Shared.SelectedTimeUnits}" >
                        
                        <SelectableTextBlock.ContextMenu>
                            <ContextMenu >
                                <MenuItem Header="seconds" Click="TimeUnitsMenuItem_OnClick" />
                                <MenuItem Header="minutes" Click="TimeUnitsMenuItem_OnClick" />
                                <MenuItem Header="hours" Click="TimeUnitsMenuItem_OnClick" />
                            </ContextMenu>
                        </SelectableTextBlock.ContextMenu>
                        
                    </SelectableTextBlock>
                    
                    <SelectableTextBlock
                        Grid.Row="9" Grid.Column="0"
                        Margin="5,0,0,3"
                        FontSize="14"
                        FontFamily="Source Code Pro"
                        Text="Waiting time pending for line" />
            
                    <SelectableTextBlock
                        Grid.Row="9" Grid.Column="1"
                        Margin="0,0,0,3"
                        FontSize="14"
                        FontFamily="Source Code Pro"
                        HorizontalAlignment="Center"
                        Text="{Binding ReplicationPendingItemsForLineWaitingTime}" />
                    
                    <SelectableTextBlock
                        Grid.Row="9" Grid.Column="2"
                        Margin="0,0,10,3"
                        FontSize="14"
                        FontFamily="Source Code Pro"
                        Text="{Binding Shared.SelectedTimeUnits}" >
                        
                        <SelectableTextBlock.ContextMenu>
                            <ContextMenu >
                                <MenuItem Header="seconds" Click="TimeUnitsMenuItem_OnClick" />
                                <MenuItem Header="minutes" Click="TimeUnitsMenuItem_OnClick" />
                                <MenuItem Header="hours" Click="TimeUnitsMenuItem_OnClick" />
                            </ContextMenu>
                        </SelectableTextBlock.ContextMenu>
                        
                    </SelectableTextBlock>

                    <SelectableTextBlock
                        Grid.Row="10" Grid.Column="0"
                        Margin="5,0,0,3"
                        FontSize="14"
                        FontFamily="Source Code Pro"
                        Text="Waiting time pending for worker A" />
            
                    <SelectableTextBlock
                        Grid.Row="10" Grid.Column="1"
                        Margin="0,0,0,3"
                        FontSize="14"
                        FontFamily="Source Code Pro"
                        HorizontalAlignment="Center"
                        Text="{Binding ReplicationPendingItemsForWorkerAWaitingTime}" />
                    
                    <SelectableTextBlock
                        Grid.Row="10" Grid.Column="2"
                        Margin="0,0,10,3"
                        FontSize="14"
                        FontFamily="Source Code Pro"
                        Text="{Binding Shared.SelectedTimeUnits}" >
                        
                        <SelectableTextBlock.ContextMenu>
                            <ContextMenu >
                                <MenuItem Header="seconds" Click="TimeUnitsMenuItem_OnClick" />
                                <MenuItem Header="minutes" Click="TimeUnitsMenuItem_OnClick" />
                                <MenuItem Header="hours" Click="TimeUnitsMenuItem_OnClick" />
                            </ContextMenu>
                        </SelectableTextBlock.ContextMenu>
                        
                    </SelectableTextBlock>
                    
                    <SelectableTextBlock
                        Grid.Row="11" Grid.Column="0"
                        Margin="5,0,0,3"
                        FontSize="14"
                        FontFamily="Source Code Pro"
                        Text="Waiting time pending for worker C" />
            
                    <SelectableTextBlock
                        Grid.Row="11" Grid.Column="1"
                        Margin="0,0,0,3"
                        FontSize="14"
                        FontFamily="Source Code Pro"
                        HorizontalAlignment="Center"
                        Text="{Binding ReplicationPendingItemsForWorkerCWaitingTime}" />

                    <SelectableTextBlock
                        Grid.Row="11" Grid.Column="2"
                        Margin="0,0,10,3"
                        FontSize="14"
                        FontFamily="Source Code Pro"
                        Text="{Binding Shared.SelectedTimeUnits}" >
                        
                        <SelectableTextBlock.ContextMenu>
                            <ContextMenu >
                                <MenuItem Header="seconds" Click="TimeUnitsMenuItem_OnClick" />
                                <MenuItem Header="minutes" Click="TimeUnitsMenuItem_OnClick" />
                                <MenuItem Header="hours" Click="TimeUnitsMenuItem_OnClick" />
                            </ContextMenu>
                        </SelectableTextBlock.ContextMenu>
                        
                    </SelectableTextBlock>
                        
                    <SelectableTextBlock
                        Grid.Row="12" Grid.Column="0"
                        Margin="5,0,0,3"
                        FontSize="14"
                        FontFamily="Source Code Pro"
                        Text="Waiting time pending for worker B" />
            
                    <SelectableTextBlock
                        Grid.Row="12" Grid.Column="1"
                        Margin="0,0,0,3"
                        FontSize="14"
                        FontFamily="Source Code Pro"
                        HorizontalAlignment="Center"
                        Text="{Binding ReplicationPendingItemsForWorkerBWaitingTime}" />

                    <SelectableTextBlock
                        Grid.Row="12" Grid.Column="2"
                        Margin="0,0,10,3"
                        FontSize="14"
                        FontFamily="Source Code Pro"
                        Text="{Binding Shared.SelectedTimeUnits}" >
                        
                        <SelectableTextBlock.ContextMenu>
                            <ContextMenu >
                                <MenuItem Header="seconds" Click="TimeUnitsMenuItem_OnClick" />
                                <MenuItem Header="minutes" Click="TimeUnitsMenuItem_OnClick" />
                                <MenuItem Header="hours" Click="TimeUnitsMenuItem_OnClick" />
                            </ContextMenu>
                        </SelectableTextBlock.ContextMenu>
                        
                    </SelectableTextBlock>
                        
                    <SelectableTextBlock
                        Grid.Row="13" Grid.Column="0"
                        Margin="5,0,0,10"
                        FontSize="14"
                        FontFamily="Source Code Pro"
                        Text="Waiting time pending for worker A/C" />
            
                    <SelectableTextBlock
                        Grid.Row="13" Grid.Column="1"
                        Margin="0,0,0,10"
                        FontSize="14"
                        FontFamily="Source Code Pro"
                        HorizontalAlignment="Center"
                        Text="{Binding ReplicationPendingItemsForWorkerMixWaitingTime}" />

                    <SelectableTextBlock
                        Grid.Row="13" Grid.Column="2"
                        Margin="0,0,10,10"
                        FontSize="14"
                        FontFamily="Source Code Pro"
                        Text="{Binding Shared.SelectedTimeUnits}" >
                        
                        <SelectableTextBlock.ContextMenu>
                            <ContextMenu >
                                <MenuItem Header="seconds" Click="TimeUnitsMenuItem_OnClick" />
                                <MenuItem Header="minutes" Click="TimeUnitsMenuItem_OnClick" />
                                <MenuItem Header="hours" Click="TimeUnitsMenuItem_OnClick" />
                            </ContextMenu>
                        </SelectableTextBlock.ContextMenu>
                        
                    </SelectableTextBlock>
                    
                    <SelectableTextBlock
                        Grid.Row="14" Grid.Column="0"
                        Margin="5,0,0,10"
                        FontSize="14"
                        FontFamily="Source Code Pro"
                        Text="Assembly lines utilization" />
                    
                    <SelectableTextBlock
                        Grid.Row="14" Grid.Column="1"
                        Margin="0,0,0,10"
                        FontSize="14"
                        FontFamily="Source Code Pro"
                        HorizontalAlignment="Center"
                        Text="{Binding ReplicationAssemblyLinesUtilization}" />
                    
                    <SelectableTextBlock
                        Grid.Row="14" Grid.Column="2"
                        Margin="0,0,10,10"
                        FontSize="14"
                        FontFamily="Source Code Pro"
                        Text="%" />
                    
                    <SelectableTextBlock
                        Grid.Row="15" Grid.Column="0"
                        Margin="5,0,0,3"
                        FontSize="14"
                        FontFamily="Source Code Pro"
                        Text="Workers group A utilization" />
                    
                    <SelectableTextBlock
                        Grid.Row="15" Grid.Column="1"
                        Margin="0,0,0,3"
                        FontSize="14"
                        FontFamily="Source Code Pro"
                        HorizontalAlignment="Center"
                        Text="{Binding ReplicationWorkersGroupAUtilization}" />
                    
                    <SelectableTextBlock
                        Grid.Row="15" Grid.Column="2"
                        Margin="0,0,10,3"
                        FontSize="14"
                        FontFamily="Source Code Pro"
                        Text="%" />
                    
                    <SelectableTextBlock
                        Grid.Row="16" Grid.Column="0"
                        Margin="5,0,0,3"
                        FontSize="14"
                        FontFamily="Source Code Pro"
                        Text="Workers group B utilization" />
                    
                    <SelectableTextBlock
                        Grid.Row="16" Grid.Column="1"
                        Margin="0,0,0,3"
                        FontSize="14"
                        FontFamily="Source Code Pro"
                        HorizontalAlignment="Center"
                        Text="{Binding ReplicationWorkersGroupBUtilization}" />
                    
                    <SelectableTextBlock
                        Grid.Row="16" Grid.Column="2"
                        Margin="0,0,10,3"
                        FontSize="14"
                        FontFamily="Source Code Pro"
                        Text="%" />
                    
                    <SelectableTextBlock
                        Grid.Row="17" Grid.Column="0"
                        Margin="5,0,0,3"
                        FontSize="14"
                        FontFamily="Source Code Pro"
                        Text="Workers group C utilization" />
                    
                    <SelectableTextBlock
                        Grid.Row="17" Grid.Column="1"
                        Margin="0,0,0,3"
                        FontSize="14"
                        FontFamily="Source Code Pro"
                        HorizontalAlignment="Center"
                        Text="{Binding ReplicationWorkersGroupCUtilization}" />
                    
                    <SelectableTextBlock
                        Grid.Row="17" Grid.Column="2"
                        Margin="0,0,10,3"
                        FontSize="14"
                        FontFamily="Source Code Pro"
                        Text="%" />
                </Grid>
            </TabItem>
            <TabItem Header="Parameters" FontSize="16" FontWeight="Bold">
                <Grid Margin="-4,10,0,0"
                    RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto">
                    <StackPanel
                        Grid.Row="0" Grid.Column="0"
                        Orientation="Horizontal" HorizontalAlignment="Left">
                        <Label
                            VerticalAlignment="Center"
                            Margin="0,0,10,0" >Sleep time</Label>
                    
                        <TextBox
                            Margin="0,0,10,0"
                            Text="{Binding SleepTime}"
                            IsEnabled="{Binding Shared.IsStartSimulationButtonEnabled}"
                            Height="20"
                            Width="115" />
                    
                        <Label
                            VerticalAlignment="Center"
                            Margin="0,0,10,0" >Delta</Label>
                    
                        <TextBox
                            Margin="0,0,0,0"
                            Text="{Binding Delta}"
                            IsEnabled="false"
                            Height="20"
                            Width="115" />
                    </StackPanel>
                    
                    <Label
                        Grid.Row="1" Grid.Column="0"
                        Margin="0,10,10,5"
                        FontSize="16"
                        FontWeight="Bold"
                        FontFamily="Source Code Pro"
                        Content="Assembly lines" />
                    
                    <StackPanel
                        Grid.Row="2" Grid.Column="0"
                        Orientation="Horizontal" HorizontalAlignment="Left">
                        <Label Margin="0,5,0,0">Count</Label>
                        <TextBox
                            Margin="10,0,0,0"
                            IsEnabled="{Binding Shared.IsStartSimulationButtonEnabled}"
                            Text="{Binding Shared.CountOfAssemblyLines}"
                            Height="20"
                            Width="40" />
                    </StackPanel>
                    
                    <Label
                        Grid.Row="3" Grid.Column="0"
                        Margin="0,10,10,5"
                        FontSize="16"
                        FontWeight="Bold"
                        FontFamily="Source Code Pro"
                        Content="Workers count" />
                    
                    <StackPanel
                        Grid.Row="4" Grid.Column="0"
                        Orientation="Horizontal" HorizontalAlignment="Left">
                        <Label Margin="0,5,0,0">A</Label>
                        <TextBox
                            Margin="10,0,0,0"
                            IsEnabled="{Binding Shared.IsStartSimulationButtonEnabled}"
                            Text="{Binding Shared.CountOfWorkersGroupA}"
                            Height="20"
                            Width="40" />
                    
                        <Label Margin="10,5,0,0">B</Label>
                        <TextBox
                            Margin="10,0,0,0"
                            IsEnabled="{Binding Shared.IsStartSimulationButtonEnabled}"
                            Text="{Binding Shared.CountOfWorkersGroupB}"
                            Height="20"
                            Width="40" />
                    
                        <Label Margin="10,5,0,0">C</Label>
                        <TextBox
                            Margin="10,0,0,0"
                            IsEnabled="{Binding Shared.IsStartSimulationButtonEnabled}"
                            Text="{Binding Shared.CountOfWorkersGroupC}"
                            Height="20"
                            Width="40" />
                    </StackPanel>
                    
                    <CheckBox
                        Grid.Row="5" Grid.Column="0"
                        IsChecked="{Binding Shared.EnableWorkerLocationPreference}"
                        IsEnabled="{Binding Shared.IsStartSimulationButtonEnabled}"
                        Margin="0,10,20,0">Worker location preference</CheckBox>
                </Grid>
            </TabItem>
        </TabControl>
        
        <Grid
            Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3"
            RowDefinitions="*" ColumnDefinitions="*,*"
            IsVisible="{Binding Shared.IsAnimatorOff}"
            Margin="0,10,0,10">
            
            <TabControl Grid.Row="0" Grid.Column="0">
                <TabItem Header="Workers group A" FontSize="14" FontWeight="Medium">
                    <DataGrid
                          ItemsSource="{Binding WorkersGroupA}"
                          SelectionMode="Single"
                          CanUserSortColumns="False"
                          IsReadOnly="True"
                          GridLinesVisibility="All"
                          RowHeight="24"
                          BorderThickness="1" BorderBrush="Gray">
            
                        <DataGrid.Styles>
                            <Style Selector="DataGridColumnHeader">
                                <Setter Property="FontWeight" Value="Bold"/>
                            </Style>
                            <Style Selector="DataGridCell:current /template/ Grid#FocusVisual"> 
                                <Setter Property="IsVisible" Value="false" /> 
                            </Style> 
                        </DataGrid.Styles>
            
                        <DataGrid.Columns>
                            <DataGridTemplateColumn Header="ID" Width="Auto">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0,0,0">
                                            <TextBlock 
                                                Text="●" 
                                                Margin="0,0,3,0"
                                                Foreground="{Binding StatusColor}" />
                                            <TextBlock Text="{Binding Id}" />
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
